<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <varunbehl.algebra.view.CustomLinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:gradient_end="@color/gradient_end"
        app:gradient_orientation="tl_br"
        app:gradient_start="@color/gradient_start">


        <varunbehl.algebra.view.ScoreTopView
            android:id="@+id/scoreLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/tx_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textSize="55sp"
                tools:text="23" />


            <TextView
                android:id="@+id/tx_operation_symbol"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="55sp"

                />

            <TextView
                android:id="@+id/tx_q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textSize="55sp"
                tools:text="67"

                />

            <TextView
                android:id="@+id/ctv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="="
                android:textColor="#FFFFFF"
                android:textSize="55sp"

                />

            <EditText
                android:id="@+id/et_solution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:inputType="number"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textSize="55sp"
                android:windowSoftInputMode="stateVisible"
                tools:text="90"
                android:importantForAutofill="no" />


        </LinearLayout>

    </varunbehl.algebra.view.CustomLinearLayout>
</layout>