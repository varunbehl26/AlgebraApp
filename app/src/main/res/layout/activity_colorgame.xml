<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


    <varunbehl.algebra.view.CustomLinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:gradient_end="@color/gradient_end"
        app:gradient_orientation="tl_br"
        app:gradient_start="@color/gradient_start">


        <RelativeLayout
            android:id="@+id/up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <ImageView
                    android:id="@+id/ivCorrect"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/correct"
                    android:visibility="invisible"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/ivWrong"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wrong"
                    android:visibility="invisible" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tx_total_time_reverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Total Time Left :10"
                    android:textColor="@color/white"
                    android:textSize="24sp"

                    />

                <TextView
                    android:id="@+id/tx_time_reverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Time Left :10"
                    android:textColor="@color/white"
                    android:textSize="24sp"

                    />


                <TextView
                    android:id="@+id/tx_num_correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    tools:text="Correct:" />


            </LinearLayout>


        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iVColor"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            android:background="@color/yellow" />

        <TextView
            android:id="@+id/tvcolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Black"
            android:textColor="@color/red"
            android:textSize="80sp" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearlay1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/iVColor"
            android:layout_alignStart="@+id/iVColor"
            android:layout_alignLeft="@+id/iVColor"
            android:layout_alignEnd="@+id/iVColor"
            android:layout_alignRight="@+id/iVColor"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/tv_red"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/red" />


            <ImageButton
                android:id="@+id/tv_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/blue"

                />


            <ImageButton
                android:id="@+id/tv_black"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/black"

                />

            <ImageButton
                android:id="@+id/tv_purple"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/purple"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlay2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/linearlay1"
            android:layout_alignStart="@+id/iVColor"
            android:layout_alignLeft="@+id/iVColor"
            android:layout_alignEnd="@+id/iVColor"
            android:layout_alignRight="@+id/iVColor"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/tv_green"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/green" />


            <ImageButton
                android:id="@+id/tv_brown"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/brown"

                />


            <ImageButton
                android:id="@+id/tv_yellow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:scaleType="fitCenter"
                android:src="@drawable/yellow"

                />


        </LinearLayout>


    </varunbehl.algebra.view.CustomLinearLayout>
</layout>